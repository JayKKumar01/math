<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.div">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        android:background="#00BDAA"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MathForKid"
            android:id="@+id/title"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="times"
            android:textSize="20dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HS : 0"
            android:id="@+id/hs"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="times"
            android:textSize="20dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/roundup"
        app:layout_constraintHeight_percent=".92"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".25"
            app:layout_constraintHorizontal_bias="0"
            android:text="ADD"
            android:onClick="gotoAdd"
            android:textColor="#AAAAAA"
            android:id="@+id/fragAdd"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#0000BDAA"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/viewFragAdd"
            app:layout_constraintTop_toBottomOf="@id/fragAdd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/fragAdd"
            app:layout_constraintEnd_toEndOf="@id/fragAdd"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".25"
            app:layout_constraintHorizontal_bias="0"
            android:text="SUBTRACT"
            android:onClick="gotoSub"
            android:textColor="#AAAAAA"
            android:id="@+id/fragSub"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragAdd"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#0000BDAA"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/viewFragSub"
            app:layout_constraintTop_toBottomOf="@id/fragSub"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/fragSub"
            app:layout_constraintEnd_toEndOf="@id/fragSub"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".25"
            app:layout_constraintHorizontal_bias="0"
            android:text="MULTIPLY"
            android:onClick="gotoMul"
            android:textColor="#AAAAAA"
            android:id="@+id/fragMul"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragSub"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#0000BDAA"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/viewFragMul"
            app:layout_constraintTop_toBottomOf="@id/fragMul"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/fragMul"
            app:layout_constraintEnd_toEndOf="@id/fragMul"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".25"
            app:layout_constraintHorizontal_bias="1"
            android:text="DIVIDE"
            android:textColor="#00BDAA"
            android:id="@+id/fragDiv"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#00BDAA"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/viewFragDiv"
            app:layout_constraintTop_toBottomOf="@id/fragDiv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/fragDiv"
            app:layout_constraintEnd_toEndOf="@id/fragDiv"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lyoutADD"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewFragAdd"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent=".5"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00BDAA">

                    <TextView
                        android:layout_width="0dp"
                        android:tag="digit"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent=".33"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/two"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="#CDCD1010"
                        android:text="1"
                        android:onClick="changeDigit"
                        android:padding="5dp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:tag="digit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent=".33"
                        app:layout_constraintVertical_bias="0"
                        android:id="@+id/three"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="2"
                        android:onClick="changeDigit"
                        android:background="#00000000"
                        android:padding="5dp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:tag="digit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent=".33"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintHorizontal_bias="1"
                        android:id="@+id/four"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="3"
                        android:onClick="changeDigit"
                        android:padding="5dp"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent=".4"
                        app:layout_constraintHorizontal_bias="1"
                        android:padding="2dp"
                        android:layout_marginRight="15dp"
                        android:text="32"
                        android:id="@+id/ques1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:fontFamily="times"
                        android:gravity="right"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintTop_toBottomOf="@+id/four"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_bias="1"
                        android:padding="2dp"
                        android:layout_marginRight="15dp"
                        android:text="32"
                        android:id="@+id/ques2"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:fontFamily="times"
                        android:gravity="right"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintTop_toBottomOf="@+id/ques1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintHorizontal_bias="1"
                        android:padding="2dp"
                        android:layout_marginRight="5dp"
                        android:text="/"
                        android:id="@+id/sign"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:fontFamily="times"
                        android:gravity="right"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintTop_toTopOf="@id/ques2"
                        app:layout_constraintBottom_toBottomOf="@id/ques2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ques2"/>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:id="@+id/view1"
                        app:layout_constraintHorizontal_bias="1"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="@id/sign"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ques2"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent=".4"
                        app:layout_constraintHorizontal_bias="1"
                        android:padding="2dp"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:layout_marginBottom="5dp"
                        android:id="@+id/ans"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:fontFamily="times"
                        android:gravity="right"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintTop_toBottomOf="@+id/view1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="RIGHT"
                        android:id="@+id/check"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:background="#00FF0B"
                        app:layout_constraintTop_toTopOf="@id/ans"
                        app:layout_constraintBottom_toBottomOf="@id/ans"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ans"/>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>



            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:id="@+id/box"
                android:background="#838383"
                app:layout_constraintWidth_percent=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="2.5"
                app:layout_constraintEnd_toEndOf="@id/box"
                app:layout_constraintStart_toStartOf="@id/box"
                app:layout_constraintTop_toBottomOf="@id/box"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/ic_baseline_upgrade_24" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/teacher"
                android:src="@drawable/normal_teacher"
                app:layout_constraintWidth_percent=".3"
                app:layout_constraintDimensionRatio=".5"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/normal_kid"
                android:id="@+id/kid"
                app:layout_constraintWidth_percent=".3"
                app:layout_constraintDimensionRatio=".5"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".15"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:padding="2dp"
                android:text="6464"
                android:id="@+id/ans1"
                android:textColor="#ffcd1010"
                android:background="@drawable/ansbg"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="times"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/kid"
                app:layout_constraintTop_toTopOf="@id/kid"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".15"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:padding="2dp"
                android:text="65"
                android:id="@+id/ans2"
                android:textColor="#ffcd1010"
                android:background="@drawable/ansbg"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="times"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/ans1"
                app:layout_constraintBottom_toBottomOf="@id/kid"
                app:layout_constraintTop_toTopOf="@id/kid"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".15"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="20dp"
                android:padding="2dp"
                android:text="66"
                android:id="@+id/ans3"
                android:textColor="#ffcd1010"
                android:background="@drawable/ansbg"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="times"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/ans2"
                app:layout_constraintBottom_toBottomOf="@id/kid"
                app:layout_constraintTop_toTopOf="@id/kid"
                app:layout_constraintEnd_toEndOf="parent"/>






        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>